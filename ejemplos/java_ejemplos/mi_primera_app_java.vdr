# üì± Mi Primera App Java con Vader
# Ejemplo que demuestra c√≥mo crear aplicaciones Java usando Vader

clase MiPrimeraApp
    # Constructor de la aplicaci√≥n
    metodo __init__(self, nombre_app)
        self.nombre = nombre_app
        self.usuarios = []
        mostrar "‚úÖ Aplicaci√≥n " + self.nombre + " iniciada"
    fin metodo
    
    # M√©todo para agregar usuarios
    metodo agregar_usuario(self, nombre, edad)
        diccionario usuario = {
            "nombre": nombre,
            "edad": edad,
            "activo": True
        }
        self.usuarios.append(usuario)
        mostrar "üë§ Usuario " + nombre + " agregado exitosamente"
    fin metodo
    
    # M√©todo para mostrar todos los usuarios
    metodo mostrar_usuarios(self)
        si len(self.usuarios) == 0
            mostrar "üì≠ No hay usuarios registrados"
        sino
            mostrar "üë• Lista de usuarios:"
            repetir usuario en self.usuarios
                mostrar "  ‚Ä¢ " + usuario["nombre"] + " (" + str(usuario["edad"]) + " a√±os)"
            fin repetir
        fin si
    fin metodo
    
    # M√©todo para buscar usuario por nombre
    metodo buscar_usuario(self, nombre_buscar)
        repetir usuario en self.usuarios
            si usuario["nombre"] == nombre_buscar
                mostrar "üéØ Usuario encontrado: " + usuario["nombre"]
                retornar usuario
            fin si
        fin repetir
        mostrar "‚ùå Usuario no encontrado: " + nombre_buscar
        retornar None
    fin metodo
    
    # M√©todo principal de la aplicaci√≥n
    metodo ejecutar(self)
        mostrar "üöÄ Bienvenido a " + self.nombre
        mostrar "Esta aplicaci√≥n demuestra las capacidades de Vader con Java"
        
        repetir mientras True
            mostrar "\n=== MEN√ö PRINCIPAL ==="
            mostrar "1. Agregar usuario"
            mostrar "2. Ver usuarios"
            mostrar "3. Buscar usuario"
            mostrar "4. Salir"
            mostrar "Elige una opci√≥n (1-4):"
            
            leer opcion
            
            si opcion == "1"
                mostrar "Nombre del usuario:"
                leer nombre
                mostrar "Edad del usuario:"
                leer edad_str
                edad = int(edad_str)
                llamar self.agregar_usuario(nombre, edad)
                
            sino si opcion == "2"
                llamar self.mostrar_usuarios()
                
            sino si opcion == "3"
                mostrar "Nombre a buscar:"
                leer nombre_buscar
                llamar self.buscar_usuario(nombre_buscar)
                
            sino si opcion == "4"
                mostrar "üëã ¬°Gracias por usar " + self.nombre + "!"
                romper
                
            sino
                mostrar "‚ùå Opci√≥n no v√°lida. Intenta de nuevo."
            fin si
        fin repetir
    fin metodo
fin clase

# Funci√≥n principal - punto de entrada de la aplicaci√≥n
funcion main()
    mostrar "üéâ ¬°Bienvenido a tu primera aplicaci√≥n Java con Vader!"
    
    # Crear instancia de la aplicaci√≥n
    crear app como MiPrimeraApp("Gestor de Usuarios")
    
    # Agregar algunos usuarios de ejemplo
    llamar app.agregar_usuario("Ana Garc√≠a", 25)
    llamar app.agregar_usuario("Carlos L√≥pez", 30)
    llamar app.agregar_usuario("Mar√≠a Rodr√≠guez", 22)
    
    # Ejecutar la aplicaci√≥n
    llamar app.ejecutar()
fin funcion

# Ejecutar el programa
llamar main()
