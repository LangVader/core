# FunciÃ³n para mejores estudiantes
funcion mejores_estudiantes()
    mostrar "\nğŸ† MEJORES ESTUDIANTES"
    
    si len(estudiantes) == 0
        mostrar "âŒ No hay estudiantes registrados"
        retornar
    fin si
    
    # Crear lista de estudiantes con promedios
    lista ranking = []
    repetir nombre en estudiantes.keys()
        promedio = llamar calcular_promedio_estudiante(nombre)
        si promedio > 0  # Solo incluir estudiantes con notas
            ranking.append([promedio, nombre])
        fin si
    fin repetir
    
    si len(ranking) == 0
        mostrar "ğŸ“­ No hay estudiantes con calificaciones"
        retornar
    fin si
    
    # Ordenar por promedio (simulaciÃ³n de sort)
    # Para simplicidad, mostramos todos y destacamos los mejores
    mejor_promedio = 0
    mejor_estudiante = ""
    
    repetir promedio, nombre en ranking
        si promedio > mejor_promedio
            mejor_promedio = promedio
            mejor_estudiante = nombre
        fin si
    fin repetir
    
    mostrar "ğŸ¥‡ MEJOR ESTUDIANTE: " + mejor_estudiante
    mostrar "   ğŸ“Š Promedio: " + str(round(mejor_promedio, 2))
    
    mostrar "\nğŸŒŸ TODOS LOS PROMEDIOS:"
    repetir promedio, nombre en ranking
        si promedio >= 90
            emoji = "ğŸ¥‡"
        sino si promedio >= 85
            emoji = "ğŸ¥ˆ"
        sino si promedio >= 80
            emoji = "ğŸ¥‰"
        sino
            emoji = "ğŸ“Š"
        fin si
        
        mostrar emoji + " " + nombre + ": " + str(round(promedio, 2))
    fin repetir
fin funcion

# FunciÃ³n para estudiantes en riesgo
funcion estudiantes_en_riesgo()
    mostrar "\nâš ï¸ ESTUDIANTES EN RIESGO"
    
    encontrados = False
    repetir nombre en estudiantes.keys()
        promedio = llamar calcular_promedio_estudiante(nombre)
        si promedio > 0 y promedio < 60
            si no encontrados
                mostrar "ğŸš¨ Estos estudiantes necesitan apoyo:"
                encontrados = True
            fin si
            mostrar "   ğŸ“‰ " + nombre + ": " + str(round(promedio, 2))
        fin si
    fin repetir
    
    si no encontrados
        mostrar "âœ… No hay estudiantes en riesgo acadÃ©mico"
    fin si
fin funcion

# FunciÃ³n para estadÃ­sticas del curso
funcion estadisticas_curso()
    mostrar "\nğŸ“Š ESTADÃSTICAS DEL CURSO"
    
    si len(estudiantes) == 0
        mostrar "âŒ No hay estudiantes registrados"
        retornar
    fin si
    
    total_estudiantes = len(estudiantes)
    estudiantes_con_notas = 0
    suma_promedios = 0
    
    repetir nombre en estudiantes.keys()
        promedio = llamar calcular_promedio_estudiante(nombre)
        si promedio > 0
            estudiantes_con_notas += 1
            suma_promedios += promedio
        fin si
    fin repetir
    
    mostrar "ğŸ‘¥ Total de estudiantes: " + str(total_estudiantes)
    mostrar "ğŸ“ Estudiantes con notas: " + str(estudiantes_con_notas)
    
    si estudiantes_con_notas > 0
        promedio_curso = suma_promedios / estudiantes_con_notas
        mostrar "ğŸ“Š Promedio del curso: " + str(round(promedio_curso, 2))
        
        si promedio_curso >= 85
            mostrar "ğŸ† Â¡Excelente rendimiento del curso!"
        sino si promedio_curso >= 75
            mostrar "ğŸ‘ Buen rendimiento general"
        sino si promedio_curso >= 65
            mostrar "ğŸ˜ Rendimiento regular"
        sino
            mostrar "âš ï¸ El curso necesita refuerzo"
        fin si
    fin si
fin funcion

