# FunciÃ³n para registrar calificaciÃ³n
funcion registrar_calificacion()
    mostrar "\nğŸ“ REGISTRAR CALIFICACIÃ“N"
    
    si len(estudiantes) == 0
        mostrar "âŒ No hay estudiantes registrados"
        retornar
    fin si
    
    mostrar "Estudiantes disponibles:"
    repetir nombre en estudiantes.keys()
        mostrar "  â€¢ " + nombre
    fin repetir
    
    mostrar "Â¿A quÃ© estudiante le quieres poner nota?"
    leer nombre_estudiante
    
    si nombre_estudiante no en estudiantes
        mostrar "âŒ Estudiante no encontrado"
        retornar
    fin si
    
    mostrar "Â¿QuÃ© materia o examen es?"
    leer materia
    
    mostrar "Â¿QuÃ© calificaciÃ³n obtuvo? (0-100)"
    leer calificacion
    calificacion = float(calificacion)
    
    si calificacion < 0 o calificacion > 100
        mostrar "âŒ La calificaciÃ³n debe estar entre 0 y 100"
        retornar
    fin si
    
    # Registrar calificaciÃ³n
    estudiantes[nombre_estudiante]["calificaciones"].append(calificacion)
    
    si materia no en estudiantes[nombre_estudiante]["materias"]
        estudiantes[nombre_estudiante]["materias"][materia] = []
    fin si
    
    estudiantes[nombre_estudiante]["materias"][materia].append(calificacion)
    
    # Determinar el nivel de la calificaciÃ³n
    si calificacion >= 90
        nivel = "ğŸ† Excelente"
    sino si calificacion >= 80
        nivel = "ğŸ˜Š Muy Bueno"
    sino si calificacion >= 70
        nivel = "ğŸ‘ Bueno"
    sino si calificacion >= 60
        nivel = "ğŸ˜ Regular"
    sino
        nivel = "ğŸ˜Ÿ Necesita Mejorar"
    fin si
    
    mostrar "âœ… CalificaciÃ³n registrada: " + str(calificacion) + " - " + nivel
fin funcion

# FunciÃ³n para calcular promedio de un estudiante
funcion calcular_promedio_estudiante(nombre)
    calificaciones = estudiantes[nombre]["calificaciones"]
    si len(calificaciones) == 0
        retornar 0
    fin si
    
    suma = 0
    repetir nota en calificaciones
        suma += nota
    fin repetir
    
    retornar suma / len(calificaciones)
fin funcion

# FunciÃ³n para ver notas de un estudiante
funcion ver_notas_estudiante()
