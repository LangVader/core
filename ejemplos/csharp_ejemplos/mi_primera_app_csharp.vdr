# Ejemplo que demuestra cÃ³mo crear aplicaciones Windows usando Vader

clase GestorTareas
    # Constructor de la aplicaciÃ³n
    metodo __init__(self, nombre_app)
        self.nombre = nombre_app
        self.tareas = []
        self.completadas = []
        mostrar "âœ… AplicaciÃ³n " + self.nombre + " iniciada"
        mostrar "ğŸ–¥ï¸ AplicaciÃ³n de escritorio C# generada desde Vader"
    fin metodo
    
    # MÃ©todo para agregar tareas
    metodo agregar_tarea(self, descripcion, prioridad)
        diccionario tarea = {
            "id": len(self.tareas) + 1,
            "descripcion": descripcion,
            "prioridad": prioridad,
            "fecha_creacion": "Hoy",
            "completada": False
        }
        self.tareas.append(tarea)
        mostrar "ğŸ“ Tarea agregada: " + descripcion + " (Prioridad: " + prioridad + ")"
    fin metodo
    
    # MÃ©todo para mostrar todas las tareas
    metodo mostrar_tareas(self)
        si len(self.tareas) == 0
            mostrar "ğŸ“­ No hay tareas pendientes"
        sino
            mostrar "ğŸ“‹ Lista de tareas pendientes:"
            repetir tarea en self.tareas
                si no tarea["completada"]
                    estado = "â³ Pendiente"
                    si tarea["prioridad"] == "Alta"
                        estado = "ğŸ”´ URGENTE"
                    sino si tarea["prioridad"] == "Media"
                        estado = "ğŸŸ¡ Normal"
                    sino
                        estado = "ğŸŸ¢ Baja"
                    fin si
                    mostrar "  " + str(tarea["id"]) + ". " + tarea["descripcion"] + " - " + estado
                fin si
            fin repetir
        fin si
    fin metodo
    
    # MÃ©todo para completar tarea
    metodo completar_tarea(self, id_tarea)
        repetir tarea en self.tareas
            si tarea["id"] == id_tarea y no tarea["completada"]
                tarea["completada"] = True
                self.completadas.append(tarea)
                mostrar "âœ… Tarea completada: " + tarea["descripcion"]
                retornar True
            fin si
        fin repetir
        mostrar "âŒ Tarea no encontrada o ya completada"
        retornar False
    fin metodo
    
    # MÃ©todo para mostrar estadÃ­sticas
    metodo mostrar_estadisticas(self)
        total = len(self.tareas)
        completadas = len(self.completadas)
        pendientes = total - completadas
        
        mostrar "ğŸ“Š ESTADÃSTICAS DE PRODUCTIVIDAD"
        mostrar "  ğŸ“ Total de tareas: " + str(total)
        mostrar "  âœ… Completadas: " + str(completadas)
        mostrar "  â³ Pendientes: " + str(pendientes)
        
        si total > 0
            porcentaje = (completadas * 100) / total
            mostrar "  ğŸ“ˆ Progreso: " + str(int(porcentaje)) + "%"
            
            si porcentaje >= 80
                mostrar "  ğŸ† Â¡Excelente productividad!"
            sino si porcentaje >= 50
                mostrar "  ğŸ‘ Buen progreso"
            sino
                mostrar "  ğŸ’ª Â¡Sigue adelante!"
            fin si
        fin si
    fin metodo
    
    # MÃ©todo para filtrar tareas por prioridad
    metodo filtrar_por_prioridad(self, prioridad)
        mostrar "ğŸ” Tareas con prioridad " + prioridad + ":"
        encontradas = 0
        
        repetir tarea en self.tareas
            si tarea["prioridad"] == prioridad y no tarea["completada"]
                mostrar "  â€¢ " + tarea["descripcion"]
                encontradas = encontradas + 1
            fin si
        fin repetir
        
        si encontradas == 0
            mostrar "  ğŸ“­ No hay tareas con esa prioridad"
        fin si
    fin metodo
    
    # MÃ©todo principal de la aplicaciÃ³n
    metodo ejecutar(self)
        mostrar "ğŸš€ Bienvenido a " + self.nombre
        mostrar "Esta aplicaciÃ³n demuestra C# generado desde Vader"
        mostrar "Perfecta para aplicaciones de escritorio Windows"
        
        repetir mientras True
            mostrar "\n=== GESTOR DE TAREAS C# ==="
            mostrar "1. ğŸ“ Agregar tarea"
            mostrar "2. ğŸ“‹ Ver tareas pendientes"
            mostrar "3. âœ… Completar tarea"
            mostrar "4. ğŸ“Š Ver estadÃ­sticas"
            mostrar "5. ğŸ” Filtrar por prioridad"
            mostrar "6. ğŸ† Ver tareas completadas"
            mostrar "7. ğŸšª Salir"
            mostrar "Elige una opciÃ³n (1-7):"
            
            leer opcion
            
            si opcion == "1"
                mostrar "DescripciÃ³n de la tarea:"
                leer descripcion
                mostrar "Prioridad (Alta/Media/Baja):"
                leer prioridad
                llamar self.agregar_tarea(descripcion, prioridad)
                
            sino si opcion == "2"
                llamar self.mostrar_tareas()
                
            sino si opcion == "3"
                llamar self.mostrar_tareas()
                mostrar "ID de la tarea a completar:"
                leer id_str
                id_tarea = int(id_str)
                llamar self.completar_tarea(id_tarea)
                
            sino si opcion == "4"
                llamar self.mostrar_estadisticas()
                
            sino si opcion == "5"
                mostrar "Prioridad a filtrar (Alta/Media/Baja):"
                leer prioridad_filtro
                llamar self.filtrar_por_prioridad(prioridad_filtro)
                
            sino si opcion == "6"
                si len(self.completadas) == 0
                    mostrar "ğŸ“­ No hay tareas completadas aÃºn"
                sino
                    mostrar "ğŸ† Tareas completadas:"
                    repetir tarea en self.completadas
                        mostrar "  âœ… " + tarea["descripcion"]
                    fin repetir
                fin si
                
            sino si opcion == "7"
                mostrar "ğŸ–¥ï¸ Â¡Gracias por usar " + self.nombre + "!"
                mostrar "ğŸ’» AplicaciÃ³n C# generada con Vader"
                romper
                
            sino
                mostrar "âŒ OpciÃ³n no vÃ¡lida. Intenta de nuevo."
            fin si
        fin repetir
    fin metodo
fin clase

# FunciÃ³n principal - punto de entrada de la aplicaciÃ³n C#
funcion Main()
    mostrar "ğŸ‰ Â¡Bienvenido a tu primera aplicaciÃ³n C# con Vader!"
    mostrar "ğŸ–¥ï¸ Esta aplicaciÃ³n se ejecuta nativamente en Windows"
    
    # Crear instancia de la aplicaciÃ³n
    crear app como GestorTareas("Gestor de Tareas Pro")
    
    # Agregar algunas tareas de ejemplo
    llamar app.agregar_tarea("Revisar emails", "Alta")
    llamar app.agregar_tarea("Preparar presentaciÃ³n", "Alta")
    llamar app.agregar_tarea("Llamar al cliente", "Media")
    llamar app.agregar_tarea("Organizar escritorio", "Baja")
    
    # Ejecutar la aplicaciÃ³n
    llamar app.ejecutar()
fin funcion

# Ejecutar el programa
llamar Main()
